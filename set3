#include <stdio.h>

int main() {
    int ts, pid[10], need[10], wt[10], tat[10], i, j, n, n1;
    int bt[10], flag[10], ttat = 0, twt = 0;
    float awt, atat;

    printf("Enter the number of Processors: ");
    scanf("%d", &n);
    n1 = n;

    printf("\nEnter the Timeslice: ");
    scanf("%d", &ts);

    for (i = 0; i < n; i++) {
        printf("\nEnter the process ID %d: ", i + 1);
        scanf("%d", &pid[i]);
        printf("Enter the Burst Time: ");
        scanf("%d", &bt[i]);
        need[i] = bt[i];
    }

    for (i = 0; i < n; i++) {
        flag[i] = 1;
        wt[i] = 0;
    }

    while (n != 0) {
        for (i = 0; i < n1; i++) {
            if (flag[i] == 1 && need[i] > 0) {
                if (need[i] >= ts) {
                    for (j = 0; j < n1; j++) {
                        if (i != j && flag[j] == 1 && need[j] > 0) {
                            wt[j] += ts;
                        }
                    }
                    need[i] -= ts;
                    if (need[i] == 0) {
                        flag[i] = 0;
                        n--;
                    }
                } else {
                    for (j = 0; j < n1; j++) {
                        if (i != j && flag[j] == 1 && need[j] > 0) {
                            wt[j] += need[i];
                        }
                    }
                    need[i] = 0;
                    flag[i] = 0;
                    n--;
                }
            }
        }
    }

    for (i = 0; i < n1; i++) {
        tat[i] = wt[i] + bt[i];
        twt += wt[i];
        ttat += tat[i];
    }

    awt = (float)twt / n1;
    atat = (float)ttat / n1;

    printf("\n\nROUND ROBIN SCHEDULING ALGORITHM\n\n");
    printf("Process ID  Burst Time  Waiting Time  Turnaround Time\n");
    for (i = 0; i < n1; i++) {
        printf("%9d %12d %13d %16d\n", pid[i], bt[i], wt[i], tat[i]);
    }
    printf("\nThe average Waiting Time = %4.2f", awt);
    printf("\nThe average Turnaround Time = %4.2f", atat);

    return 0;
}
